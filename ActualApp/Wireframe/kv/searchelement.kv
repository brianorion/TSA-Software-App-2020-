<SearchElement>:
    canvas:
        Color:
            rgba: 251/255, 232/255, 233/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Button:
            size_hint: 0.3, 0.07
            pos_hint: {"top": 0.985, "right": 1}
            text: "Search"
            font_name: "Open Sans Light"
            on_release: app.show_element_property()
        TextInput:
            id: search_text
            size_hint: 0.7, 0.07
            pos_hint: {"top": 0.9, "center_x": 0.5}
            multiline: False
            hint_text: "Hydrogen"
            on_text_validate: app.show_element_property()
            font_name: "Open Sans"
        ScrollView:
            pos_hint: {"top": 0.9, "center_x": 0.5}
            size_hint: 1, 0.96
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: searching_table
                row_default_height: 30
                row_force_default: True
                cols: 2
                padding: 0, 0
                spacing: 0, 0
                size_hint_y: None
                height: self.minimum_height * 1.18