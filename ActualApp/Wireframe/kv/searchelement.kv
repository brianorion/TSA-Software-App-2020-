<SearchElement>:
    canvas:
        Color:
            rgba: 251/255, 232/255, 233/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        # The border of the app for this page.
        GridLayout:
            row: 1
            col: 1
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/BorderForALl.png"


        Button:
            size_hint: 0.4, 0.05
            pos_hint: {"top": 0.83, "center_x": 0.5}
            text: "Search"
            font_name: "Open Sans Light"
            on_release: app.show_element_property()
        Label:
            pos_hint: {"top": 0.95, "center_x": 0.5}
            size_hint: 1, 0.05
            text: "Element Search"
            font_size: "20dp"
            font_name: "Open Sans"
            color: 0, 0, 0, 1
        TextInput:
            id: search_text
            size_hint: 0.7, 0.05
            pos_hint: {"top": 0.9, "center_x": 0.5}
            multiline: False
            hint_text: "Hydrogen"
            on_text_validate: app.show_element_property()
            font_name: "Open Sans"
        ScrollView:
            pos_hint: {"top": 0.77, "center_x": 0.5}
            size_hint: 0.75, 0.68
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: searching_table
                row_default_height: 50
                row_force_default: True
                cols: 2
                padding: 0, 0
                spacing: 0, 0
                size_hint_y: None
                height: self.minimum_height * 1