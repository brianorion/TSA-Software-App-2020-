<SignupStudent>:
    canvas:
        # to put a background image on the login screen
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1, 1, 1, 1
    FloatLayout:
        # all of the UI elements
        GridLayout:
            pos_hint: {"top": 1, "center_x": 0.5}
            size_hint: 1, 0.3
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/1-2 Create Account/Background #92/Image #28.png"
        GridLayout:
            pos_hint: {"top": 0.71, "center_x": 0.5}
            size_hint: 1.1, 0.8
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/1-2 Create Account/Background #92/Black Box #27.png"
        GridLayout:
            pos_hint: {"top": 1.05, "center_x": 0.5}
            size_hint: 1.1, 0.5
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/1-2 Create Account/Background #92/Triangle #31.png"
        GridLayout:
            pos_hint: {"top": 0.77, "center_x": 0.5}
            size_hint: 0.85, 1
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/1-2 Create Account/Contene BG #3.png"

        GridLayout:
            pos_hint: {"top": 0.35, "center_x": 0.5}
            size_hint: 0.855, 1
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/1-2 Create Account/Footer #6/Bottom Box #9.png"

        # all of the labels within the app
        Label:
            pos_hint: {"top": 0.97, "center_x": 0.275}
            size_hint: 1, 0.1
            text: "Sign Up"
            color: 0, 0, 0, 1
            font_size: "40dp"
            font_name: "Open Sans"
        TextInput:
            multiline: False
            id: student_email_signup
            pos_hint: {"top": 0.75, "center_x": 0.5}
            size_hint: 0.8, 0.05
            hint_text: "Email"
            background_normal: "False"
            background_active: "False"
        Image:
            source: "Image/1-2 Create Account/Content #19/Divider #75.png"
            size_hint: 0.8, 0.05
            pos_hint: {"top": 0.73, "center_x": 0.5}

        TextInput:
            multiline: False
            id: student_password_signup
            pos_hint: {"top": 0.67, "center_x": 0.5}
            size_hint: 0.8, 0.05
            password: True
            hint_text: "Password"
            background_normal: "False"
            background_active: "False"
        Image:
            source: "Image/1-2 Create Account/Content #19/Divider #75.png"
            size_hint: 0.8, 0.05
            pos_hint: {"top": 0.65, "center_x": 0.5}

        TextInput:
            multiline: False
            id: name
            pos_hint: {"top": 0.59, "center_x": 0.5}
            size_hint: 0.8, 0.05
            hint_text: "Name"
            background_normal: "False"
            background_active: "False"
        Image:
            source: "Image/1-2 Create Account/Content #19/Divider #75.png"
            size_hint: 0.8, 0.05
            pos_hint: {"top": 0.57, "center_x": 0.5}

        TextInput:
            multiline: False
            id: DOB
            pos_hint: {"top": 0.51, "center_x": 0.5}
            size_hint: 0.8, 0.05
            hint_text: "DOB: MM/DD/YYYY"
            background_normal: "False"
            background_active: "False"
        Image:
            source: "Image/1-2 Create Account/Content #19/Divider #75.png"
            size_hint: 0.8, 0.05
            pos_hint: {"top": 0.49, "center_x": 0.5}

        TextInput:
            multiline: False
            id: username
            pos_hint: {"top": 0.43, "center_x": 0.5}
            size_hint: 0.8, 0.05
            hint_text: "Username"
            background_normal: "False"
            background_active: "False"
        Image:
            source: "Image/1-2 Create Account/Content #19/Divider #75.png"
            size_hint: 0.8, 0.05
            pos_hint: {"top": 0.41, "center_x": 0.5}


        Label:
            id: error_text
            pos_hint: {"top": 0.35, "center_x": 0.5}
            size_hint: 0.5, 0.05
            text: ""
            color: 1, 0, 0, 1
        Button:
            pos_hint: {"top": 0.25, "center_x": 0.5}
            size_hint: 0.7, 0.05
            text: "Signup!"
            on_release: app.change_screen("login_screen")
        Button:
            pos_hint: {"top": 0.1, "left": 1}
            size_hint: 0.3, 0.05
            text: "Back"
            on_release: app.back_button("login_screen", True)


