#:import utils kivy.utils

<SignupStudentOrTeacher>:
    canvas:
        # to put a background image on the login screen
        Color:
            rgb: utils.get_color_from_hex("#bdf0d6")
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        GridLayout:
            cols: 1
            rows: 1
            pos_hint: {"top": 0.97, "center_x": 0.5}
            size_hint: 138/root.width, 138/root.height
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/StudentorTeacher/Green Circle.png"

        GridLayout:
            cols: 1
            rows: 1
            pos_hint: {"top": 0.8, "center_x": 0.5}
            size_hint: 272/root.width, 44/ root.height
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/StudentorTeacher/LongGreenRectangle.png"
            Label:
                text: "Chem Hero"
                font_name: "Cabin Sketch"
                color: 0, 0, 0, 1
                font_size: "30dp"
        GridLayout:
            cols: 1
            rows: 1
            pos_hint: {"center_x": 0.25, "center_y": 0.45}
            size_hint: 137/root.width, 137/ root.height
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/StudentorTeacher/RoundSqare.png"
        GridLayout:
            cols: 1
            rows: 1
            pos_hint: {"center_x": 0.75, "center_y": 0.45}
            size_hint: 137/root.width, 137/ root.height
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/StudentorTeacher/RoundSqare.png"
        GridLayout:
            cols: 1
            rows: 1
            pos_hint: {"center_x": 0.25, "center_y": 0.47}
            size_hint: 91/root.width, 91/ root.height
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/StudentorTeacher/WhiteCircle.png"

        GridLayout:
            cols: 1
            rows: 1
            pos_hint: {"center_x": 0.75, "center_y": 0.47}
            size_hint: 91/root.width, 91/ root.height
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/StudentorTeacher/WhiteCircle.png"
        Label:
            pos_hint: {"top": 0.77, "center_x": 0.3}
            size_hint: 1, 0.2
            valign: "center"
            halign: "center"
            text: "Sign up as a..."
            font_size: "18dp"
            font_name: "Open Sans"
            color: 0, 0, 0, 1

    # the first button for the student
    GridLayout:
        rows: 1
        cols: 1
        pos_hint: {"center_y": 0.45, "center_x": 0.25}
        size_hint: 137/root.width, 137/ root.height
        Button:
            background_color: 0, 0, 0, 0
            on_release: app.change_screen("signup_student")
    GridLayout:
        rows: 1
        cols: 1
        pos_hint: {"center_y": 0.36, "center_x": 0.25}
        Label:
            color: 0, 0, 0, 1
            font_size: "16dp"
            font_name: "Open Sans Light"
            text: "Student"

     # the second button for the student
    GridLayout:
        rows: 1
        cols: 1
        pos_hint: {"center_y": 0.45, "center_x": 0.75}
        size_hint: 137/root.width, 137/ root.height
        Button:
            background_color: 0, 0, 0, 0
            on_release: app.change_screen("signup_teacher")
    GridLayout:
        rows: 1
        cols: 1
        pos_hint: {"center_y": 0.36, "center_x": 0.75}
        Label:
            color: 0, 0, 0, 1
            font_size: "16dp"
            font_name: "Open Sans Light"
            text: "Teacher"

    # the text on the bottom of the app
    GridLayout:
        rows: 1
        cols: 2
        pos_hint: {"top": 0.1, "center_x": 0.50}
        size_hint: 0.8, 0.04
        Label:
            text: "Registered an Account?"
            color: 0, 0, 0, 1
        Button:
            size_hint: 0.55, 0.04
            text: "Login"
            color: 0, 0, 0, 1
            on_release: app.change_screen("login_screen")
