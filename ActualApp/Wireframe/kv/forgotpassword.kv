#:import utils kivy.utils
<ForgotPassword>:
    FloatLayout:
        Label:
            pos_hint: {"top": 0.95, "center_x": 0.5}
            size_hint: 1, 0.05
            text: "FORGOT PASSWORD"
            font_size: "26dp"
            bold: True
        Label:
            pos_hint: {"top": 0.7, "center_x": 0.5}
            cols: 1
            size_hint: 1, 0.05
            text: "Enter your E-mail, and we'll\nsend you a link to reset your password"

        TextInput:
            pos_hint: {"top": 0.55, "center_x": 0.49}
            size_hint: 0.95, 0.2
            id: email
            hint_text: "Email Address"
            font_name: "Open Sans Light"
            multiline: False
        Label:
            pos_hint: {"top": 0.35, "center_x": 0.5}
            size_hint: 1, 0.1
            id: error_text
            text: ""
            font_name: "Open Sans Light"
            color: 1, 0, 0, 1
            font_size: "12dp"
        Button:
            pos_hint: {"top": 0.25, "center_x": 0.5}
            size_hint: 0.5, 0.12
            text: "Send Link"
            color: utils.get_color_from_hex("4191c7")
            font_name: "Open Sans"
            bold: True
            on_release: app.send_email_to_reset_password();
