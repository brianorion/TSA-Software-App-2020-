<SignupTeacher>:
    canvas:
        # to put a background image on the login screen
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Image/Login Background.png"
    # Student Signup Title
    GridLayout:
        cols: 1
        rows: 1
        # there would like an image later.
        pos_hint: {"top": 0.9, "center_x": 0.5}
        size_hint: 1, 0.1
        Label:
            text: "Teacher Signup"
            font_size: "24dp"
    FloatLayout:
        TextInput:
            id: teacher_email_signup
            pos_hint: {"top": 0.6, "center_x": 0.5}
            size_hint: 0.8, 0.05
            hint_text: "Email"
        TextInput:
            pos_hint: {"top": 0.5, "center_x": 0.5}
            size_hint: 0.8, 0.05
            id: teacher_password_signup
            password: True
            hint_text: "Password"
        Label:
            id: error_text
            pos_hint: {"top": 0.4, "center_x": 0.5}
            size_hint: 0.5, 0.05
            text: ""
            color: 1, 0, 0, 1
        Button:
            pos_hint: {"top": 0.3, "center_x": 0.5}
            size_hint: 0.25, 0.1
            text: "Signup!"
            on_release: app.change_screen("login_screen")