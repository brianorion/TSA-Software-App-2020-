<MolarCalculator>:
    canvas:
        Color:
            rgba: 251/255, 232/255, 233/255, 1
        # to put a background image on the login screen
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        # The border of the app for this page.
        GridLayout:
            row: 1
            col: 1
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Image/BorderForALl.png"
        Label:
            pos_hint: {"top": 0.95, "center_x": 0.5}
            size_hint: 1, 0.05
            text: "Molar Calculator"
            font_size: "20dp"
            font_name: "Open Sans"
            color: 0, 0, 0, 1
        Button:
            size_hint: 0.4, 0.05
            pos_hint: {"top": 0.83, "center_x": 0.5}
            text: "Calculate"
            font_name: "Open Sans Light"
            on_release: app.calculate_molar_mass()
        TextInput:
            id: chemical_formula_text
            size_hint: 0.7, 0.05
            pos_hint: {"top": 0.9, "center_x": 0.5}
            multiline: False
            hint_text: "H2O"
            on_text_validate: app.calculate_molar_mass()
            font_name: "Open Sans"
        ScrollView:
            pos_hint: {"top": 0.77, "center_x": 0.5}
            size_hint: 0.75, 0.68
            do_scroll_x: False
            do_scroll_y: True
            scroll_y: 0
            Label:
                markup: True
                size_hint_y: None
                id: calculation_text
                font_size: 14
                height: self.texture_size[1] * 1.15
                text_size: root.width * 0.75, None
                color: 0, 0, 0, 1
                font_name: "Open Sans"
                text: ""